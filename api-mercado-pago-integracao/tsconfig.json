{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // Garante que os nomes dos arquivos respeitem a capitalização
    "noImplicitReturns": true, // Garante que todas as funções retornem um valor ou não retornem nada
    "noFallthroughCasesInSwitch": true, // Previne o comportamento de fallthrough em declarações switch
    "skipLibCheck": true, // Omite a verificação de arquivos de definição de biblioteca
    "strictNullChecks": true, // Garante que valores null e undefined sejam tratados explicitamente
    "strictPropertyInitialization": true, // Garante que as propriedades das classes sejam inicializadas no construtor
    "resolveJsonModule": true, // Permite a importação de arquivos JSON como módulos
    "noUnusedLocals": true, // Emite erros para variáveis locais não utilizadas
    "noUnusedParameters": true, // Emite erros para parâmetros de funções não utilizados
    "allowSyntheticDefaultImports": true // Permite a importação de módulos ES6 sem um export default
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
